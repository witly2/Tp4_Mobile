<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_connexion">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tp4.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.tp4.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/nav_connexion"
        android:name="com.example.tp4.ui.connexion.ConnexionFragment"
        android:label="@string/connexion"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_connexion_to_nav_inscription"
            app:destination="@id/nav_details" />
        <action
            android:id="@+id/action_nav_connexion_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_details"
        android:name="com.example.tp4.ui.inscription.InscriptionFragment"
        android:label="@string/inscription"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_nav_details_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

</navigation>